{
  "name": "@bkper/web-auth",
  "version": "1.0.1",
  "description": "Framework-agnostic OAuth authentication SDK for Bkper API",
  "author": {
    "name": "Bkper Inc.",
    "url": "https://bkper.com"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf ./node_modules ./dist",
    "prebuild": "bun install",
    "build": "tsc",
    "dev": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "cp ../../LICENSE . && bun run build && bun run test",
    "preversion": "bun run test",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "postversion": "git push --follow-tags && npm publish --access public && echo \"âœ… Successfully released version $npm_package_version!\""
  },
  "homepage": "https://bkper.com/docs/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bkper/bkper-web.git",
    "directory": "packages/auth"
  },
  "bugs": {
    "url": "https://github.com/bkper/bkper-web/issues",
    "email": "support@bkper.com"
  },
  "keywords": [
    "bkper",
    "auth",
    "oauth",
    "authentication",
    "sdk"
  ],
  "devDependencies": {
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "@vitest/ui": "^4.0.16"
  }
}
